# Business Reporter - File Exchange Portal Configuration
# Copy this file to .env and fill in your own values
# NEVER commit .env to version control

# Application Settings
APP_NAME=Business Reporter - File Exchange Portal (Demo)

# Directory Paths
FILES_DIR=files
USER_DB_PATH=users.db
AUDIT_LOG=audit.log

# Security - GENERATE NEW SECRET KEYS FOR PRODUCTION!
# You can generate a secure key with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_OF_64_CHARACTERS
INVITE_CODE=

# Session Security
# Set to 1 for production with HTTPS, 0 for development
SESSION_COOKIE_SECURE=0

# File Upload Settings
# Maximum file size in bytes (default: 500MB)
MAX_CONTENT_LENGTH=524288000

# Server Settings
PORT=5000

# Email SMTP Settings (Optional - leave empty to disable)
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_demo_username
SMTP_PASSWORD=your_demo_password

# Email From Address
SMTP_FROM_EMAIL=noreply@example.com
SMTP_FROM_NAME=Business Reporter File Exchange Demo

# Email Notifications (1=enabled, 0=disabled)
EMAIL_NOTIFICATIONS_ENABLED=1

# Development/Production Mode
# Set FLASK_ENV=production for production deployment
FLASK_ENV=development
